# Rebecca AI Studio Environment Configuration
# Copy this file to .env.local and update with your actual values

# Required: Gemini API Key
NEXT_PUBLIC_API_KEY=your-gemini-api-key-here

# Optional: OpenAI API Key for fallback support
NEXT_PUBLIC_OPENAI_API_KEY=your-openai-api-key-here

# Backend Configuration
# Update this URL after deploying your Firebase Functions or backend
NEXT_PUBLIC_FIREBASE_FUNCTIONS_URL=https://us-central1-your-project-id.cloudfunctions.net/api

# Firebase Configuration (if using Firebase)
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Admin Configuration (optional)
ADMIN_PASSWORD=your-secure-admin-password